<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_root"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:padding="10dp"
    android:weightSum="1">

    <TextView
        android:id="@+id/alarmEditTitle"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/alarm_settingst_title"
        android:textAppearance="?android:attr/textAppearanceSmall" />
    <EditText
        android:id="@+id/alarmNameText"
        android:layout_width="match_parent"
        android:inputType="text"
        android:layout_height="wrap_content" >
        <requestFocus />
    </EditText>
    <TextView
        android:id="@+id/textViewRadioButtons"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="@string/alarm_settings_units"
        android:textAppearance="?android:attr/textAppearanceSmall"/>

    <RadioGroup xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal" >
        <RadioButton android:id="@+id/radio_seconds"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Seconds"
            />
        <RadioButton android:id="@+id/radio_minutes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Minutes"
            />
    </RadioGroup>
    <TextView
        android:id="@+id/text_ringtone_name"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="@string/alarm_settings_ringtone"
        android:textAppearance="?android:attr/textAppearanceSmall"/>
    <Button
        android:id="@+id/changeRingtone"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/alarm_settings_ringtone_change" />
    <FrameLayout
        android:layout_marginTop="50dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal">
        <Button
            android:id="@+id/cancelAlarmSettings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cancel"
            android:layout_gravity="center_horizontal|bottom" />
        <Button
            android:id="@+id/okAlarmSettings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_toRightOf="@+id/cancelAlarmSettings"
            android:text="OK"
            android:layout_gravity="right|top" />
    </FrameLayout>
</LinearLayout>